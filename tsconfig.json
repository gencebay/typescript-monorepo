{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react",
    "allowJs": false,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true
  },
  "exclude": ["node_modules", "packages/**/node_modules", "**/build/**/*", "**/*.spec.ts"]
}
